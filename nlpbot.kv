#:kivy 1.11.1
#:import ew kivy.uix.effectwidget


<UserButton@Button>:
    background_normal: 'rsc/button_blue.png'
    background_down: 'rsc/button_blue_down.png'
    font_name: 'Cartoon'
    font_size: 24
    bold: True
    color: (56./255, 245./255, 198./255, 1.0)

<BotLabel@Label>:
    font_name: 'Chrobot'
    font_size: 36
    color: (56./255, 245./255, 198./255, 1.0)


<MainWindow>:
    # For access in python code
    output_layout: output_layout
    output_label: output_label
    functions_layout: functions_layout.__self__
    input_layout: input_layout.__self__
    bottom_layout: bottom_layout

    # Background Color
    canvas.before:
        Color:
            rgba: 75./255, 49./255, 122./255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        size: (root.width , root.height)
        
        # Background image
        EffectWidget:
            #effects: [ew.PixelateEffect(pixel_size = 200)]
            AsyncImage:
                source: 'rsc/robot_3.gif'
                anim_delay: 0.04
                mipmap: True
                allow_stretch: True
                on_touch_up: root.on_click_bot()
        
        BoxLayout:
            orientation: 'vertical'

            # Welcome / Output
            AnchorLayout:
                id: output_layout
                anchor_x: 'center'
                anchor_y: 'center'

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.6, 1.0)
                    padding: 100

                    BotLabel:
                        canvas:
                            Rectangle:
                                source: 'rsc/output.png'
                                pos: self.pos
                                size: self.size
                        id: output_label
                        text: root.message['welcome']
                        halign: 'center'
                        valign: 'center'
                        on_touch_up: root.on_click_hint()
                    
            AnchorLayout:
                id: bottom_layout
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_y: 0.4

                # Functions
                BoxLayout:
                    id: functions_layout
                    orientation: 'horizontal'
                    padding: 50
                    spacing: 100
                    size_hint: (0.8, 0.6)

                    UserButton:
                        text: root.message['func_a']
                        on_release: root.on_click_a()
                    UserButton:
                        text: root.message['func_b']
                        on_release: root.on_click_b()
                    UserButton:
                        text: root.message['func_c']
                        on_release: root.on_click_c()

                # hint / inputs
                BoxLayout:
                    id: input_layout
                    orientation: 'vertical'
                    size_hint_x: 0.6
                    padding: 50
                    spacing: 5

                    TextInput:

                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'

                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: (0.15, 0.5)
                            UserButton:
                                text: 'Say it to the bot'