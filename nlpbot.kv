#:kivy 1.11.1
#:import ew kivy.uix.effectwidget

<MainWindow>:
    # For access in python code
    output_layout: output_layout
    output_label: output_label
    functions_layout: functions_layout.__self__
    input_layout: input_layout.__self__
    bottom_layout: bottom_layout

    # Background Color
    canvas.before:
        Color:
            rgba: 242./255, 242./255, 242./255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        size: (root.width , root.height)
        
        # Background image
        EffectWidget:
            effects: [ew.PixelateEffect()]
            AsyncImage:
                source: 'rsc/robot.gif'
                anim_delay: 0.08
                mipmap: True
                allow_stretch: True
                on_touch_up: root.on_click_bot()
        
        BoxLayout:
            orientation: 'vertical'

            # Welcome / Output
            AnchorLayout:
                id: output_layout
                anchor_x: 'center'
                anchor_y: 'center'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: (0.6, 0.8)
                    padding: 100

                    Label:
                        id: output_label
                        canvas.before:
                            Color:
                                rgba: 50./255, 70./255, 120./255, 0.95
                            Rectangle:
                                pos: self.pos
                                size: self.size
                        text: root.message['welcome']
                        font_size: '24sp'
                        color: (230./255, 230./255, 1.0, 1.0)
                        halign: 'center'
                        valign: 'center'
                        on_touch_up: root.on_click_hint()
                    
            AnchorLayout:
                id: bottom_layout
                anchor_x: 'center'
                anchor_y: 'center'
                size_hint_y: 0.4

                # Functions
                BoxLayout:
                    id: functions_layout
                    orientation: 'horizontal'
                    padding: 50
                    spacing: 100
                    size_hint: (0.8, 0.6)

                    Button:
                        text: root.message['func_a']
                        on_press: root.on_click_a()
                    Button:
                        text: root.message['func_b']
                        on_press: root.on_click_b()
                    Button:
                        text: root.message['func_c']
                        on_press: root.on_click_c()

                # hint / inputs
                BoxLayout:
                    id: input_layout
                    orientation: 'vertical'
                    size_hint_x: 0.6
                    padding: 50
                    spacing: 5

                    TextInput:

                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'center'

                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: (0.15, 0.5)
                            Button:
                                text: 'Say it to the bot'