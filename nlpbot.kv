#:kivy 1.11.1
#:import ew kivy.uix.effectwidget


<UserButton@Button>:
    background_normal: 'rsc/button_blue.png'
    background_down: 'rsc/button_blue_down.png'
    font_name: 'Cartoon'
    font_size: 24
    bold: True
    color: (56./255, 245./255, 198./255, 1.0)
    

<MainWindow>:
    # For access in python code
    top_layout: top_layout
    output_layout: output_layout.__self__
    confirm_layout: confirm_layout.__self__
    response_label: response_label.__self__
    output_label: output_label.__self__

    bottom_layout: bottom_layout
    functions_layout: functions_layout.__self__
    options_layout: options_layout.__self__
    input_layout: input_layout.__self__
    text_input: text_input.__self__
    ask_layout: ask_layout.__self__
    ask_label: ask_label.__self__

    # Background Color
    canvas.before:
        Color:
            rgba: 75./255, 49./255, 122./255, 1
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        size: (root.width , root.height)
        
        # Background image
        EffectWidget:
            #effects: [ew.PixelateEffect(pixel_size = 200)]
            AsyncImage:
                source: 'rsc/robot_3.gif'
                anim_delay: 0.04
                mipmap: True
                allow_stretch: True
                on_touch_up: root.on_click_bot()
        
        BoxLayout:
            orientation: 'vertical'

            # Response / Output / confirm
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'

                BoxLayout:
                    id: top_layout
                    orientation: 'vertical'
                    size_hint: (0.6, 0.6)
                    padding: 100
                    spacing: 15

                    Label:
                        id: response_label
                        font_name: 'Chrobot'
                        font_size: 36
                        color: (242./255, 234./255, 242./255, 1.0)
                        text: root.message['welcome']
                        on_touch_up: root.on_click_hint()


                    BoxLayout:
                        orientation: 'vertical'
                        id: output_layout
                        size_hint_y: 0.9
                        FloatLayout:
                            Label:
                                pos: self.parent.parent.pos
                                canvas:
                                    Rectangle:
                                        source: 'rsc/output.png'
                                        pos: self.pos
                                        size: self.size
                            ScrollView:
                                pos: self.parent.parent.pos
                                Label:
                                    id: output_label
                                    size_hint: (None, None)
                                    size: self.texture_size
                                    padding: (50, 50)
                                    font_name: 'Chrobot'
                                    font_size: 28
                                    color: (85./255, 88./255, 145./255, 1.0)
                                    text: "Yang Rui shall be dead! Yang Rui shall be dead! Yang Rui shall be dead! Yang Rui shall be dead!\n" * 20
                                    halign: 'center'
                                    valign: 'center'
                        
                    AnchorLayout:
                        id: confirm_layout
                        size_hint_y: 0.1
                        anchor_x: 'center'
                        anchor_y: 'top'
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: (0.15, 1.0)
                            UserButton:
                                text: 'Confirm'
                                on_release: root.on_click_confirm()

        
            AnchorLayout:
                id: bottom_layout
                anchor_x: 'center'
                anchor_y: 'top'
                size_hint_y: 0.4

                # Functions
                BoxLayout:
                    id: functions_layout
                    orientation: 'horizontal'
                    padding: 50
                    spacing: 100
                    size_hint: (0.8, 0.6)

                    UserButton:
                        text: root.message['func_a']
                        on_release: root.on_click_a()
                    UserButton:
                        text: root.message['func_b']
                        on_release: root.on_click_b()
                    UserButton:
                        text: root.message['func_c']
                        on_release: root.on_click_c()

                # func_a options
                BoxLayout:
                    id: options_layout
                    orientation: 'horizontal'
                    padding: 50
                    spacing: 100
                    size_hint: (0.8, 0.6)

                    UserButton:
                        text: root.message['option_1']
                        on_release: root.on_click_option1()
                    UserButton:
                        text: root.message['option_2']
                        on_release: root.on_click_option2()
                    UserButton:
                        text: root.message['option_3']
                        on_release: root.on_click_option3()

                # Inputs
                BoxLayout:
                    id: input_layout
                    orientation: 'vertical'
                    size_hint: (0.6, 1.0)
                    padding: 0
                    spacing: 15

                    AnchorLayout:
                        anchor_x: 'center'
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.75
                            TextInput:
                                id: text_input

                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: (0.15, 0.4)
                            UserButton:
                                text: 'Say it to the bot'
                                on_release: root.on_click_say()

                 # Ask
                BoxLayout:
                    id: ask_layout
                    orientation: 'vertical'
                    size_hint: (0.6, 1.0)

                    AnchorLayout:
                        anchor_x: 'center'
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint_x: 0.75
                            Label:
                                id: ask_label
                                font_name: 'Cartoon'
                                font_size: 32
                                color: (242./255, 234./255, 242./255, 1.0)
                                